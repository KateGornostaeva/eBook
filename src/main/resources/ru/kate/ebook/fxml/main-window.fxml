<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="mainVBox" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.14-internal"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.kate.ebook.controllers.MainWindowController">
    <children>
        <ToolBar fx:id="mainToolBar" styleClass="main-tool-bar">
            <items>
                <Button fx:id="btnOpen" prefHeight="61" prefWidth="185" mnemonicParsing="false"
                        onAction="#handleOpenFile"
                        text="Открыть"/>
                <Button fx:id="btnHome" style="-fx-background-color: #554BA3;" prefHeight="61" prefWidth="100"
                        mnemonicParsing="false" onAction="#handleHome"/>
                <Button fx:id="btnListOrGrid" prefHeight="61" prefWidth="100" mnemonicParsing="false"
                        onAction="#handleSwitchList"/>
                <Button fx:id="btnDraftAndPublished" prefHeight="61" prefWidth="100" mnemonicParsing="false"
                        visible="false"
                        onAction="#handleDraftAndPublished"/>
                <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true"/>
                <TextField fx:id="txtSearch" styleClass="search-field" HBox.hgrow="ALWAYS"/>
                <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true"/>
                <Button fx:id="btnUser" prefHeight="61" prefWidth="100" mnemonicParsing="false"
                        onAction="#handleOpenUser"
                        text="Войти"/>
                <Button fx:id="btnSettings" prefHeight="61" prefWidth="100" mnemonicParsing="false"/>
            </items>
        </ToolBar>
    </children>
</VBox>
